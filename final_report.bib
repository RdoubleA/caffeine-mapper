mendeley-groups = {Brain Dynamics/Resting State/RSNs},
pages = {10--29},
pmid = {25970649},
publisher = {Elsevier Inc.},
title = {{Functional subdivisions of medial parieto-occipital cortex in humans and nonhuman primates using resting-state fMRI}},
