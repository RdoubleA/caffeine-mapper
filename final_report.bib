doi = {10.1016/j.neuroimage.2014.11.001},
file = {:Users/rafi/Downloads/1-s2.0-S1053811914009033-main.pdf:pdf},
isbn = {1053-8119},
issn = {10959572},
journal = {NeuroImage},
keywords = {Brain dynamics,Functional connectivity,Functional connectivity dynamics,Resting state,Structural connectivity,Whole brain computational model},
mendeley-groups = {Brain Dynamics,Brain Dynamics/Connectomics,Brain Dynamics/Resting State},
pages = {525--535},
pmid = {25462790},
publisher = {The Authors},
title = {{Functional connectivity dynamics: Modeling the switching behavior of the resting state}},
url = {http://dx.doi.org/10.1016/j.neuroimage.2014.11.001},
volume = {105},
year = {2015}
}

@article{Deco2013,
