file = {:Users/rafi/Downloads/sbm{\_}jmlr{\_}4.pdf:pdf},
issn = {1567-2190},
mendeley-groups = {Network Science},
title = {{Community detection and stochastic block models: recent developments}},
url = {http://arxiv.org/abs/1703.10146},
year = {2017}
}

